
<div id="form">
  <div class="panel panel-default mx-auto text-left">
    <div class="panel-heading">
      <h2>Log in</h2>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label "Username/Email" %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "on", required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if devise_mapping.rememberable? -%>
        <div class="form-group float-left">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="actions float-right" id="btn-theme">
        <%= f.submit "Log in", class: "btn btn-outline-dark" %>
      </div>
      <% end %>
        </div>   
      </div>
    </div>
    <hr>
    <div class="panel-footer">
       <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end -%>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <span>Dont't have an Account?</span> <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end -%>
      <%#= render "devise/shared/links", class: "float-left" %>
    </div>
  </div>
</div>

