<div class="my-search">
  <h2>Find People</h2>
  <div id="user-lookup">
    <%= form_tag search_users_path, remote: true, method: :get, id: "user-lookup-form" do %>
      <div class="form-group row no-padding text-center col-md-12">
        <div class="col-md-10">
          <%= text_field_tag :search_param, params[:search_param], placeholder: "Enter username or email", autofocus: true, class: "form-control search-box input-lg" %>
        </div>
        <div class="col-md-2">
          <%= button_tag(type: :submit, class: "btn btn-sm btn-success") do %>
            <i class="fa fa-search"></i> Search
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<div id="results">
  <%= render 'users/result' %>
</div>