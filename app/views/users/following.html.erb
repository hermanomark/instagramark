<% if @follows.size > 0 %>
  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center"><h2>Following: <%= current_user.following.count %></h2>
    </li>
    <% @follows.each do |following| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= link_to gravatar_for(following, 300, "img-circle-link"), user_path(following) %>
          <% if following.username %>
            <%= link_to following.username, user_path(following) %>
          <% else %>
            <%= link_to following.email, user_path(following) %>
          <% end %>
        </div>
      <%= link_to "Unfollow", follow_path(following), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="row col-lg-12">
    <p class="lead mx-auto">You do not follow anyone! Please follow some users</p>
  </div>
<% end %>