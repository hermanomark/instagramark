<% if obj.errors.any? %>
  <div id="form-error">
    <div class="alert alert-danger alert-dismissable mx-auto">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p><strong>This form contains <%= pluralize(obj.errors.count, 'error') %>.</strong></p>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>